<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="products" type="productsType" />
    <xs:complexType>
        <xs:sequence>
            <xs:element name="product" type="productDetail" minOccurs="0" maxOccurs="unbounded" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="productDetail">
        <xs:sequence>
            <xs:element name="productName" type="xs:string" />
            <xs:element name="manufacturer" type="manufacturerDetail" />
            <xs:element name="description" type="xs:string" minOccurs="0" maxOccurs="unbounded" />
            <xs:element name="prices" type="pricesList" />
            <xs:element name="productItems" type="xs:string" />
        </xs:sequence>
        <xs:attribute name="sku" type="xs:string" />
        <xs:attribute name="createdAt" type="xs:dateTime" />
        <xs:attribute name="shippable" type="xs:boolean" />
    </xs:complexType>

    <xs:complexType name="manufacturerDetail">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="id" type="xs:string" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <xs:complexType name="pricesList">
        <xs:sequence>
            <xs:element name="price" minOccurs="0" maxOccurs="unbounded" type="priceType" />
        </xs:sequence>
    </xs:complexType>
</xs:schema>